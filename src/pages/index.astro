---
import { getCollection } from 'astro:content';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Page from '../layouts/Page.astro';
import FormattedDate from '../components/FormattedDate.astro';

const posts = await getCollection('blog');
const [latestPost, ...morePosts] = posts;
---

<Page title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<main class="space-y-10 py-10">

		<div class="space-y-3">
			<h1 class="text-sm opacity-50">
				Latest
			</h1>
			<a href={`/${latestPost.slug}`} class="block space-y-2">
				<h2 class="text-xl">
					{latestPost.data.title}
				</h2>
				<p class="opacity-50">
					<FormattedDate date={latestPost.data.published} />
				</p>
				<p class="opacity-50">
					{latestPost.body.slice(0, 140)}... <span>Read more &rarr;</span>
				</p>
			</a>
		</div>

		<hr />

		<div class="space-y-3">
			<h1 class="text-sm opacity-50">
				Prior logs
			</h1>
			{morePosts.map((post) => (
				<a href={`/${post.slug}`} class="flex gap-3">
					<div class="text-gray-500">
						{post.data.published.toLocaleDateString('en-us', { year: 'numeric', timeZone: 'UTC' })} â€¢ {post.data.published.toLocaleString('en-US', { month: '2-digit', timeZone: 'UTC' })}
					</div>
					<div>
						{post.data.title}
					</div>
				</a>
			))}
		</div>

	</main>
</Page>